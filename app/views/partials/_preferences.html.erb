  <%= label_tag "resources[music]", "Listen to my favorite music" %>
  <%= check_box_tag "resources[music]", "music" %>
  <%= label_tag "resources[activity]", "Perform an activity I enjoy" %>
  <%= check_box_tag "resources[activity]", "activity" %>
  <%= label_tag "resources[buddy]", "Talk to a friend or family member" %>
  <%= check_box_tag "resources[buddy]", "buddy" %>
  <%= label_tag "resources[media]", "View cute animal pictures" %>
  <%= check_box_tag "resources[media]", "media" %>
  <%= label_tag "resources[journal]", "Journal" %>
  <%= check_box_tag "resources[journal]", "journal" %>

  <h3>My favorite music is: </h3>
  <%= label_tag "music[rock]", "Rock" %>
  <%= check_box_tag "music[rock]", "rock" %>
  <%= label_tag "music[r&b-soul]", "R&B/Soul" %>
  <%= check_box_tag "music[r&b-soul]", "rnbsoul" %>
