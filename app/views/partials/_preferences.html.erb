  <%= f.check_box :music_preferences, { :multiple => true }, "folkindie", false %>
  <%= f.label "music[custom]", "Other" %>
  <%= f.text_field :music_preferences, { :multiple => true, :name => 'music_1', :value => '' } %>
  <%= f.text_field :music_preferences, { :multiple => true, :name => 'music_2', :value => '' } %>

  <h3>I love looking at: </h3>
  <%= f.label "media[dogs]", "Dogs" %>
  <%= f.check_box :media_preference, { :multiple => true }, "dogs", false %>
  <%= f.label "media[cats]", "Cats" %>
  <%= f.check_box :media_preference, { :multiple => true }, "cats", false %>
  <%= f.label "media[animals]", "All animals" %>
  <%= f.check_box :media_preference, { :multiple => true }, "animals", false %>
  <%= f.label "media[babies]", "Baby humans" %>
  <%= f.check_box :media_preference, { :multiple => true }, "babies", false %>
  <%= f.label "media[landscapes]", "Landscapes" %>
  <%= f.check_box :media_preference, { :multiple => true }, "landscapes", false %>
  <%= f.label "media[celestial]", "Celestial" %>
  <%= f.check_box :media_preference, { :multiple => true }, "celestial", false %>

  <h3>Other activities I enjoy include: </h3>
  <%= f.label "activities" %>
  <%= f.text_area :activity_preferences, { :multiple => true, :name => 'activity_1', :value => '' } %>
  <%= f.text_area :activity_preferences, { :multiple => true, :name => 'activity_2', :value => '' } %>
  <%= f.text_area :activity_preferences, { :multiple => true, :name => 'activity_3', :value => '' } %>

  <%= f.submit button %>
<% end %>
