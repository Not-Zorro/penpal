  <%= label_tag "music[custom]", "Other" %>
  <%= text_field_tag "music[custom]" %>
  <%= text_field_tag "music[custom_2]" %>

  <h3>I love looking at: </h3>
  <%= label_tag "media[dogs]", "Dogs" %>
  <%= check_box_tag "media[dogs]", "dogs" %>
  <%= label_tag "media[cats]", "Cats" %>
  <%= check_box_tag "media[cats]", "cats" %>
  <%= label_tag "media[animals]", "All animals" %>
  <%= check_box_tag "media[animals]", "animals" %>
  <%= label_tag "media[babies]", "Baby humans" %>
  <%= check_box_tag "media[babies]", "babies" %>
  <%= label_tag "media[landscapes]", "Landscapes" %>
  <%= check_box_tag "media[landscapes]", "landscapes" %>
  <%= label_tag "media[celestial]", "Celestial" %>
  <%= check_box_tag "media[celestial]", "celestial" %>

  <h3>Other activities I enjoy include: </h3>
  <%= label_tag "activities" %>
  <%= text_area_tag "activity[activity_1]" %>
  <%= text_area_tag "activity[activity_2]" %>
  <%= text_area_tag "activity[activity_3]" %>

  <%= submit_tag button %>
<% end %>
