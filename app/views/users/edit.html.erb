<center>
  <h3>Edit Your Profile</h3>
<section class='edit-profile'>
  <%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: @user.first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: @user.last_name %>

    <%= f.submit 'Update' %>
  <% end %>
  </section>
</center>
